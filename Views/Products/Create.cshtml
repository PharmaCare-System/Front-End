@model ProductAddVM

@{
    ViewData["Title"] = "Create Product";
}

<div class="container">
    <h2>@ViewData["Title"]</h2>
    <hr />

    <div class="row">
        <div class="col-md-8">
            <form asp-action="Create" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <!-- Basic Information -->
                <div class="card mb-4">
                    <div class="card-header bg-primary text-white">
                        <h5>Product Information</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Name" class="control-label"></label>
                                    <input asp-for="Name" class="form-control" />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Price" class="control-label"></label>
                                    <input asp-for="Price" class="form-control" />
                                    <span asp-validation-for="Price" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="ExpiryDate" class="control-label"></label>
                                    <input asp-for="ExpiryDate" type="date" class="form-control" />
                                    <span asp-validation-for="ExpiryDate" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="QuantityInStock" class="control-label"></label>
                                    <input asp-for="QuantityInStock" class="form-control" />
                                    <span asp-validation-for="QuantityInStock" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="BarCode" class="control-label"></label>
                            <input asp-for="BarCode" class="form-control" />
                            <span asp-validation-for="BarCode" class="text-danger"></span>
                        </div>

                        <!-- Image Upload -->
                        <div class="form-group mb-3">
                            <label asp-for="ImageURL" class="control-label">Product Image</label>
                            <input asp-for="ImageURL" class="form-control" id="imageUpload" accept="image/*" />
                            <span asp-validation-for="ImageURL" class="text-danger"></span>
                            <small class="form-text text-muted">Upload a high-quality product image (JPEG, PNG)</small>

                            <!-- Image Preview -->
                            <div class="mt-3" id="imagePreviewContainer" style="display:none;">
                                <img id="imagePreview" class="img-thumbnail" style="max-height:200px;" />
                                <button type="button" class="btn btn-sm btn-danger mt-2" onclick="clearImage()">
                                    <i class="bi bi-trash"></i> Remove Image
                                </button>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Settings -->
                <div class="card mb-4">
                    <div class="card-header bg-primary text-white">
                        <h5>Product Settings</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <!-- Category Dropdown -->
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="CategoryId" class="control-label"></label>
                                    <input asp-for="CategoryId" class="form-control" />
                                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                                </div>
                            </div>

                          <div class="form-group col-md-6">
    <label for="InventoryId">Inventory</label>
    @Html.DropDownListFor(model => model.InventoryId, (SelectList)ViewBag.Inventories, "Select Inventory", new { @class = "form-control" })
</div>

                        <div class="form-check mb-3">
                            <input asp-for="BulkAllowed" class="form-check-input" />
                            <label asp-for="BulkAllowed" class="form-check-label">Allow Bulk Purchases</label>
                        </div>

                        <div class="form-check mb-3">
                            <input asp-for="PrescriptionRequired" class="form-check-input" />
                            <label asp-for="PrescriptionRequired" class="form-check-label">Requires Prescription</label>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-save"></i> Create Product
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Back to List
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

