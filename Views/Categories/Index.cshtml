@model List<PharmaCare.Models.Categories.CategoryReadVM>
@{
	ViewData["Title"] = "Categories";
}
<h1>@ViewData["Title"]</h1>
<div class="row">
	<div class="col-md-12">
		<a asp-action="Create" class="btn btn-primary">Create New Category</a>
	</div>
</div>
<hr />
<table class="table table-striped">
	<thead>
		<tr>
			<th>Name</th>
			<th>Is Active</th>
			<th>Actions</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var category in Model)  { 
			<tr> 
				<td>@category.CategoryName</td> 
				<td>@category.IsActive</td> 
				<td> 
					<a asp-action="Edit" asp-route-id="@category.Id" class="btn btn-warning">Edit</a> 
					<a asp-action="Delete" asp-route-id="@category.Id" class="btn btn-danger">Delete</a> 
				</td> 
			</tr> 
		} 
	</tbody>
