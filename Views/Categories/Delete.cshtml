@model PharmaCare.Models.Categories.CategoryReadVM
@{
    ViewData["Title"] = "Delete Category";
}

<div class="delete-container">
    <div class="container-fluid px-4">
        <div class="card shadow-sm border-danger">
            <div class="card-header bg-danger text-white">
                <h2 class="mb-0"><i class="fas fa-exclamation-triangle me-2"></i>@ViewData["Title"]</h2>
            </div>
            <div class="card-body">
                <div class="alert alert-warning">
                    <h4 class="alert-heading"><i class="fas fa-exclamation-circle me-2"></i>Warning!</h4>
                    <p class="mb-0">Are you sure you want to delete this category? This action cannot be undone.</p>
                </div>

                <div class="category-details p-4 bg-light rounded">
                    <h4 class="mb-4">Category Details</h4>
                    <dl class="row">
                        <dt class="col-sm-3 col-md-2">Name:</dt>
                        <dd class="col-sm-9 col-md-10">@Model.CategoryName</dd>

                        <dt class="col-sm-3 col-md-2">Status:</dt>
                        <dd class="col-sm-9 col-md-10">
                            <span class="badge @(Model.IsActive ? "bg-success" : "bg-secondary")">
                                @(Model.IsActive ? "Active" : "Inactive")
                            </span>
                        </dd>
                    </dl>
                </div>

                <form asp-action="Delete" method="post" class="mt-4">
                    <input type="hidden" asp-for="Id" />
                    <div class="d-flex gap-3">
                        <button type="submit" class="btn btn-danger px-4 py-2">
                            <i class="fas fa-trash-alt me-2"></i>Confirm Delete
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary px-4 py-2">
                            <i class="fas fa-times me-2"></i>Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    .delete-container {
        padding: 2rem 0;
        background-color: #f8f9fa;
        min-height: calc(100vh - 80px);
    }

    .card {
        border-radius: 0.5rem;
        border-width: 2px;
    }

    .card-header {
        border-radius: 0.5rem 0.5rem 0 0 !important;
        padding: 1.25rem 1.5rem;
    }

    .card-body {
        padding: 2rem;
    }

    .category-details {
        border-left: 4px solid #0d6efd;
    }

    dt {
        font-weight: 600;
        color: #495057;
    }

    dd {
        margin-bottom: 1rem;
    }

    .badge {
        font-size: 0.9rem;
        padding: 0.5em 0.75em;
    }

    @@media (max-width: 576px) {
        .card-body {
            padding: 1.5rem;
        }

        .d-flex {
            flex-direction: column;
            gap: 1rem !important;
        }

        .btn {
            width: 100%;
        }
    }
</style>