@model CategoryUpdateVM
@{
    ViewData["Title"] = "Edit Category";
}

<div class="form-container">
    <div class="container-fluid px-4">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h2 class="mb-0">Edit Category</h2>
            </div>
            <div class="card-body">
                <form asp-action="Edit" method="post">
                    <input type="hidden" asp-for="Id" />

                    <div class="mb-4">
                        <label asp-for="CategoryName" class="form-label fw-bold"></label>
                        <input asp-for="CategoryName" class="form-control form-control-lg" />
                        <span asp-validation-for="CategoryName" class="text-danger"></span>
                    </div>

                    <div class="mb-4">
                        <label class="form-label fw-bold">Status</label>
                        <div class="d-flex gap-4">
                            <div class="form-check">
                                <input class="form-check-input" type="radio" asp-for="IsActive" value="true" checked="@Model.IsActive" />
                                <label class="form-check-label">
                                    <span class="badge bg-success">Active</span>
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" asp-for="IsActive" value="false" checked="@(Model.IsActive == false)" />
                                <label class="form-check-label">
                                    <span class="badge bg-secondary">Inactive</span>
                                </label>
                            </div>
                        </div>
                        <span asp-validation-for="IsActive" class="text-danger"></span>
                    </div>

                    <div class="d-flex gap-3 mt-4">
                        <button type="submit" class="btn btn-primary px-4 py-2">
                            <i class="fas fa-save me-2"></i>Save Changes
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary px-4 py-2">
                            <i class="fas fa-times me-2"></i>Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    .form-container {
        padding: 2rem 0;
        background-color: #f8f9fa;
        min-height: calc(100vh - 80px);
    }

    .card {
        border-radius: 0.5rem;
        border: none;
    }

    .card-header {
        border-radius: 0.5rem 0.5rem 0 0 !important;
        padding: 1.25rem 1.5rem;
    }

    .card-body {
        padding: 2rem;
    }

    .form-control-lg {
        padding: 0.75rem 1rem;
        font-size: 1.1rem;
    }

    .badge {
        font-size: 0.9rem;
        padding: 0.5em 0.75em;
    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}