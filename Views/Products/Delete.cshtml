@model ProductReadVM
@{
    ViewData["Title"] = "Delete Product";
}

<div class="delete-container">
    <div class="container-fluid px-4">
        <div class="card shadow-sm border-danger">
            <div class="card-header bg-danger text-white">
                <h2 class="mb-0"><i class="fas fa-exclamation-triangle me-2"></i>@ViewData["Title"]</h2>
            </div>
            <div class="card-body">
                <div class="alert alert-warning">
                    <h4 class="alert-heading"><i class="fas fa-exclamation-circle me-2"></i>Warning!</h4>
                    <p class="mb-0">Are you sure you want to delete this product? This action cannot be undone.</p>
                </div>

                <div class="product-details p-4 bg-light rounded">
                    <div class="row">
                        <div class="col-md-4 text-center">
                            @if (!string.IsNullOrEmpty(Model.ImageUrl))
                            {
                                <img src="@Model.ImageUrl" class="img-fluid rounded mb-3" style="max-height: 200px;" />
                            }
                            else
                            {
                                <div class="bg-secondary rounded d-flex align-items-center justify-content-center" style="height: 200px; width: 200px;">
                                    <i class="fas fa-capsules fa-4x text-white"></i>
                                </div>
                            }
                        </div>
                        <div class="col-md-8">
                            <h4 class="mb-4">@Model.Name</h4>
                            <dl class="row">
                                <dt class="col-sm-4">Price:</dt>
                                <dd class="col-sm-8">@Model.Price.ToString("C")</dd>

                                <dt class="col-sm-4">Stock:</dt>
                                <dd class="col-sm-8">@Model.QuantityInStock</dd>

                                <dt class="col-sm-4">Barcode:</dt>
                                <dd class="col-sm-8">@Model.BarCode</dd>
                            </dl>
                        </div>
                    </div>
                </div>

                <form asp-action="Delete" method="post" class="mt-4">
                    <input type="hidden" asp-for="Id" />
                    <div class="d-flex gap-3">
                        <button type="submit" class="btn btn-danger px-4 py-2">
                            <i class="fas fa-trash-alt me-2"></i>Confirm Delete
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary px-4 py-2">
                            <i class="fas fa-times me-2"></i>Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    .delete-container {
        padding: 2rem 0;
        background-color: #f8f9fa;
        min-height: calc(100vh - 80px);
    }

    .card {
        border-radius: 0.5rem;
        border-width: 2px;
    }

    .card-header {
        border-radius: 0.5rem 0.5rem 0 0 !important;
        padding: 1.25rem 1.5rem;
    }

    .card-body {
        padding: 2rem;
    }

    .product-details {
        border-left: 4px solid #0d6efd;
    }

    dt {
        font-weight: 600;
        color: #495057;
    }

    dd {
        margin-bottom: 1rem;
    }

    @@media (max-width: 768px) {
        .card-body {
            padding: 1.5rem;
        }

        .product-details .row {
            flex-direction: column;
        }

        .product-details .col-md-4 {
            margin-bottom: 1.5rem;
        }

        .d-flex {
            flex-direction: column;
            gap: 1rem !important;
        }

        .btn {
            width: 100%;
        }
    }
</style>